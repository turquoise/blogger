<h1>All Articles</h1>

<ul id="articles">
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article_path(article) %>
    </li>
    <p>
	<% if article.image.exists? %>
		<%= image_tag article.image.url(:thumb) %>
	<% end %>
	</p>
  <% end %>
</ul>

<%= link_to "Create a New Article", new_article_path, class: "new_article" %>
